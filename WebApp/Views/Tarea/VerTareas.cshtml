@using Dominio;
@model IEnumerable<Tarea>
<a asp-action="ListarPeones" asp-controller="Empleado">Volver a los peones</a>
@if (!Model.Any())
{
    <span class="text-xxl-center">No hay tareas</span>
}else{

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Fecha Pactada
            </th>
            <th>
                Fecha de Cierre
            </th>
            <th>
                Comentario
            </th>
            <th>
                Finalizada
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.Id
                </td>
                <td>
                    @item.Descripcion
                </td>
                <td>
                    @item.FechaPactada
                </td>
                <td>
                    @item.FechaCierre
                </td>
                <td>
                    @item.Comentario
                </td>
                <td>
                    @if (item.Finalizada)
                    {
                        <span>Si</span>
                    }
                    else
                    {
                        <span>No</span>
                    }
                </td>
               
            </tr>
            }
    </tbody>
    </table>
}